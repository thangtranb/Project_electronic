
@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model Product
<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
            <h4 class="mb-sm-0">Create Product</h4>

            

        </div>
    </div>
</div>
<!-- end page title -->

<form asp-action="Create" enctype="multipart/form-data">
    
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Product Name</label>
                        <input type="text" class="form-control" asp-for="ProName">
                        <span asp-validation-for="ProName" class="text-danger"></span>
                            
                    </div>
                    <div>
                        <label>Product Description</label>

                        <textarea asp-for="Description">
                           
                        </textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-body">
                    <div class="mb-4">
                        <h5 class="fs-14 mb-1">Product Image</h5>
                        <div class="text-center">
                            <div class="position-relative d-inline-block">
                                <img src="/images/upload.jpg" id="profile-pic" />
                                <label id="lable-create" for="input-file">Add Product Image</label>
                                <input asp-for="ImageUpload" type="file" id="input-file" hidden />
                                <span asp-validation-for="ImageUpload" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- end card -->

            

           
        </div>
        <!-- end col -->

        <div class="col-lg-4">    

            <div class="card">
                    
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Id</label>
                        <input type="text" class="form-control" asp-for="Id">
                        <span asp-validation-for="Id" class="text-danger"></span>

                    </div>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-2">
                        <a asp-controller="Category" asp-action="Create" class="float-end text-decoration-underline">
                            Add
                            New
                        </a>Category
                    </p>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                        <option>--Choose a Category--</option>
                        
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="card-body">
                    <p class="text-muted mb-2">
                        <a asp-controller="Brand" asp-action="Create" class="float-end text-decoration-underline">
                            Add
                            New
                        </a>Brand
                    </p>
                    <select asp-for="BrandId" class="form-select" asp-items="ViewBag.Brands">
                        <option>--Choose a Brand--</option>
                        
                    </select>
                    <span asp-validation-for="BrandId" class="text-danger"></span>
                </div>

                
                <div class="card-body">
                    <p class="text-muted mb-2">
                        Price
                    </p>
                    <div class="hstack gap-3 align-items-start">
                        <div class="flex-grow-1">
                            <input asp-for="Price" class="form-control" placeholder="Enter Price" type="number" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <p class="text-muted mb-2">
                        Old Price
                    </p>
                    <div class="hstack gap-3 align-items-start">
                        <div class="flex-grow-1">
                            <input asp-for="OldPrice" class="form-control" placeholder="Enter Old Price" type="number" />
                            <span asp-validation-for="OldPrice" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <p class="text-muted mb-2">
                        Quantity
                    </p>
                    <div class="hstack gap-3 align-items-start">
                        <div class="flex-grow-1">
                            <input asp-for="Quantity" class="form-control" type="number" placeholder="Enter Quantity" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!-- end card body -->
            </div>
            <!-- end card -->

            <div class="text-center mb-3">
                
                <button type="submit" class="btn btn-success w-sm" style="width:100%">Save</button>
            </div>
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->

</form>
<div class="text-start mb-3">
    <a asp-controller="Product" asp-action="Index" type="submit" class="btn btn-primary w-sm">Back to list Product</a>
    
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('Description');
    </script>
}
    