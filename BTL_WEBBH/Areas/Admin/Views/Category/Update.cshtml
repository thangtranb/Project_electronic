
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model Category
<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
            <h4 class="mb-sm-0">Create Category</h4>



        </div>
    </div>
</div>
<!-- end page title -->

<form asp-action="Update" enctype="multipart/form-data">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body" hidden>
                    <div class="mb-3">
                        <label class="form-label">Id</label>
                        <input type="text" class="form-control" asp-for="CategoryId" >
                        

                    </div>

                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Category Name</label>
                        <input type="text" class="form-control" asp-for="CategoryName">
                        <span asp-validation-for="CategoryName" class="text-danger"></span>

                    </div>

                </div>
                <div class="text-center mb-3">

                    <button type="submit" class="btn btn-success w-sm" style="width:100%">Save</button>
                </div>

            </div>
            <!-- end card -->




        </div>

    </div>
    <!-- end row -->

</form>
<div class="text-start mb-3">
    <a asp-controller="Category" asp-action="Index" type="submit" class="btn btn-primary w-sm">Back to list Category</a>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}

