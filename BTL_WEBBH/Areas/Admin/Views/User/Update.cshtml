
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model User
<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
            <h4 class="mb-sm-0">Create User</h4>
        </div>
    </div>
</div>
<!-- end page title -->

<form asp-action="Update" enctype="multipart/form-data">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" class="form-control" asp-for="FullName" readonly>
                        <span asp-validation-for="FullName" class="text-danger"></span>


                        <div class="mb-4 mt-3">
                            <h5 class="fs-14 mb-1">Product Image</h5>
                            <div class="text-center">
                                <div class="position-relative d-inline-block">
                                    <img src="/images/avatar/@Model.Avatar" id="profile-pic" />
                                    <label id="lable-create" for="input-file" hidden>Add Product Image</label>
                                    <input asp-for="AvatarUpload" type="file" id="input-file" hidden />
                                    <span asp-validation-for="AvatarUpload" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- end card -->




        </div>
        <!-- end col -->

        <div class="col-lg-4">

            <div class="card">

                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">User Name</label>
                        <input type="text" class="form-control" asp-for="Username" readonly>
                        

                    </div>

                    <div class="mb-3">
                        <label class="form-label" readonly>PassWord</label>
                        <input type="text" class="form-control" asp-for="Password" readonly>
                        

                    </div>

                    <div class="mb-3">
                        <p class="text-muted mb-2">
                            Phone
                        </p>
                        <div class="hstack gap-3 align-items-start">
                            <div class="flex-grow-1">
                                <input asp-for="Phone" class="form-control" type="number" placeholder="Enter Phone" readonly/>
                                
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <input type="text" class="form-control" asp-for="Address" readonly>
                        

                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" asp-for="Email" readonly>
                        

                    </div>
                </div>

                <!-- end card body -->
            </div>
            <!-- end card -->

            <div class="text-center mb-3">

                <a asp-controller="User" asp-action="Index" class="btn btn-success w-sm" style="width:100%">Back to list User</a>
            </div>
        </div>
        <!-- end col -->
    </div>
    <!-- end row -->

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('Description');
    </script>
}
